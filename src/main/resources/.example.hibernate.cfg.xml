<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/database_name</property>
        <property name="connection.username">database_admin</property>
        <property name="connection.password">password_here</property>

        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <property name="show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="connection.autocommit">true</property>

        <!-- DB schema will be updated if needed -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Annotated entity classes -->
        <mapping class="main.java.com.nangui.entities.Month"/>
        <mapping class="main.java.com.nangui.entities.Year"/>
        <mapping class="main.java.com.nangui.entities.MonthYear"/>
        <mapping class="main.java.com.nangui.entities.Payment"/>
        <mapping class="main.java.com.nangui.entities.User"/>
        <mapping class="main.java.com.nangui.entities.Role"/>
        <mapping class="main.java.com.nangui.entities.Permission"/>
        <mapping class="main.java.com.nangui.entities.Lessor"/>
        <mapping class="main.java.com.nangui.entities.Property"/>
        <mapping class="main.java.com.nangui.entities.PriorNotice"/>
        <mapping class="main.java.com.nangui.entities.Customer"/>
        <mapping class="main.java.com.nangui.entities.Leasing"/>
        <mapping class="main.java.com.nangui.entities.Image"/>
        <mapping class="main.java.com.nangui.entities.PropertyType"/>
        <mapping class="main.java.com.nangui.entities.LessorType"/>
    </session-factory>
</hibernate-configuration>